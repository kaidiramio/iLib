<!doctype html>
<html>
<head>
    <title>ILib</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="trackStyle.css">
    <link rel="stylesheet" href="font-awesome.min.css">
</head>
<body>
<section class="container">
  <section class="page-header text-center">
    <h1><span class="fa fa-plus"></span> Add a Book</h1>
    <a href="/library" class="btn btn-default btn-btn-sm">Library</a>
    <a href="/profile" class="btn btn-default btn-btn-sm">Profile</a>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </section>

   
  <section class="row">
    <section class="col-sm-6">
      <!-- LOCAL INFORMATION -->
        <section class="well">
          <h2>Add a Book</h2>
          <% if (user.local.email) { %>
            <form id="newBookForm" class="border">
                <label for="bookTitleToAdd">New Book Title</label>
                <input type="text" id="bookTitleToAdd" name="title" placeholder="Moby Dick" style="width: 295px">
                <button type="submit" value="Submit" id="newBook">Submit Book!</button>
            </form>
          <% %>
        </section>
        
        <section id="second">
          <div class="well">
            <h3 class="headingThree">Books</h3>
            <% for(let i = 0; i < symptoms.length; i++) {%>
              <section id="<%=symptoms[i]._id%>" class="<%= symptoms[i].checked ? 'done' : '' %>">
                  <h5 class="dateFont"><%=symptoms[i].date%></h5>
                  <!-- <h5><%=symptoms[i].date%></h5> -->
                  <ul>
                    <li><%=symptoms[i].pain%> Pain</li> 
                    <li><%=symptoms[i].fatigue%> Fatigue</li>
                    <li><%=symptoms[i].moodS%> Mood</li>
                    <li><%=symptoms[i].mobility%> Mobility</li>
                  </ul>
                  <h5 class="messageDisplay">Notes: <%=symptoms[i].msg%></h5>
                  <span id="icon"><i class="fa fa-check-square-o" aria-hidden="true"></i></span>
                  <span id="iconIcon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                </section>
              <% } %>

    <div id='display'></div>
    <div id='bookDetail' class='border'>
      <p id='detailTitle'>Select a book to see it's details and comments</p>
      <ol id='detailComments'></ol>
    </div>
    <button id='deleteAllBooks'>Delete all books...</button>
  </div>
          <!-- <% } %> -->
        </section>
    </section>
  </section>
</section>


