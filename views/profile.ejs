<!doctype html>
<html>
<head>
    <title>TrackerRA</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="font-awesome.min.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> My Profile</h1>
        <a href="/library" class="btn btn-default btn-sm">My Library</a>
        <a href="/addBook" class="btn btn-default btn-sm">Add a Book</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="profilePic"><label for="profile_pic">Choose a profile picture:</label>
                  <input type="file" id="profile_pic" name="profile_pic" accept=".jpg, .jpeg, .png">
                </h3>

                <!-- this would be cool to continue doing so it works not sure how to approach images in Mongoose just yet -->

                <% if (user.local.email) { %>
                    <p>
                        <p><strong class="item">id</strong>: <%= user._id %><br></p>
                        <p><strong class="item">email</strong>: <%= user.local.email %><br></p>
                        <p><strong class="item">password</strong>: <%= user.local.password %></p>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <div class="well">
            
              <h3 class="headingThree"> Books I'd Like to get:</h3>
              <p>Keep track of any books you're looking forward to reading or purchasing in the future! Just add a note below!</p>
              <% if (user.local.email) { %>
                <form action="/bookNotesMsg" method="POST">
                  <!-- <label for="time">Time:</label>
                  <input type="time" id="timeOfDrink" name="time"> -->
                  <p>Current Date is <input id="date" type="date" name ="date">.</p>

                  <label class="message" for="message">Enter Title of Book</label>
                  <input class="msgs" type="text" placeholder="Enter title" name="msg">

                  <label class="message" for="message">Enter Author of Book</label>
                  <input class="msgs" type="text" placeholder="Enter author" name="author">
                  <button class="add" type="submit">Add Note</button>

                  <!-- add author and title to api -->
              </form>
          </div>
        </div>
      <div class="col-sm-6" id="second">
        <h3>Books</h3>
          
          <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
              <li class="message">
                <span><%= messages[i].date%></span>
                <span><%= messages[i].msg %></span>
                <span><%= messages[i].author %></span>
                <span><i class="fa fa-star" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </li>
            <% } %>
          </ul>

        </div>
      <% } %>
  </div>


</div>

<script src="main.js"></script>

</body>
</html>
